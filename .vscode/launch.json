    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                // "0.0.0.0:8000" // Optional: Specify host and port if not default
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py",
            // "justMyCode": true,
            // "cwd": "${workspaceFolder}",
            // "envFile": "${workspaceFolder}/.env", // Optional: If you use a .env file
            // "console": "integratedTerminal", // Or "internalConsole"

        },
        {
            "name": "Python: Django Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                // "your_app_name.tests.test_my_feature" // Optional: run a specific test
            ],
            "django": true,
            // "justMyCode": true,
            "cwd": "${workspaceFolder}",
            // "envFile": "${workspaceFolder}/.env",
            // "console": "integratedTerminal"
        },
        {
            "name": "Python: Django Shell",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell"
                // "shell_plus" // Or "shell" if you don't use django-extensions
            ],
            "django": true,
            // "justMyCode": false, // Set to false to debug your code within the shell if needed
            "cwd": "${workspaceFolder}",
            // "envFile": "${workspaceFolder}/.env",
            // "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // "console": "integratedTerminal",
            // "justMyCode": true
        }
    ]
}
